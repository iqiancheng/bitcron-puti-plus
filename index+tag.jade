

extends base.jade
block content
	.autopagerize_page_element:.content
		for post in posts: .post.animated.fadeInDown
			.post_title
				h2: a(href=post.url)= post.title
			.list
				.post_content
					p= post.content.limit(words=90).no_pic.plain

			.post_footer: .meta: .info
				span.field
					i.fa.fa-sun-o
					span.date= post.date.format("%Y.%m.%d")
				span.field
					i.fa.fa-comment-o
					span= "%s Comments" % (post.comments_count or 0)
				if post.tags: span.field.tags
					i.fa.fa-flask
					for tag in post.tags
						a.tag(href='/tag/{{tag}}')= tag

		+h.i18n('Back to Previous Page', '上一页', 'zh_cn')
		+h.i18n('Read More Posts', '更多文章', 'zh_cn')
		+h.paginator(pre_label=_('Back to Previous Page'), next_label=_('Read More Posts'))